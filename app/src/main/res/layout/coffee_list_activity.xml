<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="5dp"
    android:clickable="true"
    android:id="@+id/rv"
    android:background="@drawable/gradient_background"
    android:padding="15dp">

    <TextView
        android:id="@+id/text_view_coffee_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/card_view_project_icon_container"
        android:fontFamily="@font/signika"
        android:paddingLeft="10dp"
        android:textColor="#272727"
        android:textSize="20sp"
        tools:text="The App Title" />


    <TextView
        android:id="@+id/text_view_coffee_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_coffee_name"
        android:layout_marginTop="8dp"
        android:layout_toStartOf="@id/card_view_project_icon_container"
        android:fontFamily="@font/opensans_light"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:text="Price : " />
    <TextView
        android:id="@+id/text_view_coffee_description2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_coffee_name"
        android:layout_marginTop="8dp"
        android:layout_toStartOf="@id/card_view_project_icon_container"
        android:fontFamily="@font/opensans_light"
        android:paddingLeft="70dp"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:text="299 RS" />
    <TextView
        android:id="@+id/text_view_coffee_description3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_coffee_name"
        android:layout_marginTop="10dp"
        android:layout_toStartOf="@id/card_view_project_icon_container"
        android:fontFamily="@font/opensans_light"
        android:paddingLeft="140dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="100 RS " />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_project_icon_container"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        app:cardCornerRadius="16dp">

        <ImageView
            android:id="@+id/image_view_project_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:clickable="true"
            tools:src="@drawable/affogatocoffee" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>
